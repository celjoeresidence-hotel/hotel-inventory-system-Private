{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hotel-inventory-system",
  "productName": "Hotel Inventory System",
  "description": "Hotel Inventory Management System",
  "author": "Celjoe Residence Hotel",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "build:release": "npm run build && electron-builder",
    "package:win": "npm run build && electron-packager . \"Hotel Inventory System\" --platform=win32 --arch=x64 --out=dist-win --icon=build/icon.ico --overwrite --ignore=\"^/(\\.git|\\.cache|src|scripts|dist-electron|dist-packager|dist-app|dist-release|dist-build|dist-final|dist-final-2|dist-win|release.*)\""
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.hotel.inventory",
    "productName": "Hotel Inventory System",
    "directories": {
      "output": "release-installer-11"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png",
      "artifactName": "Hotel-Inventory-System-Setup-${version}.${ext}",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "publish": {
      "provider": "github",
      "owner": "celjoeresidence-hotel",
      "repo": "hotel-inventory-system-Private"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.88.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
